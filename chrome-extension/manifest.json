{
    "name": "Page URL Monitor",
    "version": "1.0",
    "description": "Monitors the current page the user is on!",
    "permissions": ["tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["activity_monitor.js"]
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }